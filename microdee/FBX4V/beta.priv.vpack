<vpack>
  <meta>
    <name>FBX4V Beta</name>
        <license>https://fbx4v-betadeploy.herokuapp.com</license>
    <author>microdee</author>
        <dependencies>
            <dependency>
                <name>mp.dx</name>
                <source>https://github.com/microdee/mp.dx.git</source>
            </dependency>
        </dependencies>
  </meta>
  <install>
        using System;
        Console.WriteLine("");
        Console.WriteLine("Data: " + Pack.InstallDataFromJS);
        Console.WriteLine("");
        if(VVVV.Architecture == "x64")
        {
            Download(
                Pack.InstallDataFromJS,
                VPM.TempDir + "\\fbx-payload.zip"
            );
            Extract(VPM.TempDir + "\\fbx-payload.zip", Pack.TempDir);
            Download(
                "https://f001.backblazeb2.com/file/uberact/FBX4V/assets.zip",
                VPM.TempDir + "\\fbx-assets.zip"
            );
            Extract(VPM.TempDir + "\\fbx-assets.zip", Pack.TempDir);
            CopyDir(
                Pack.TempDir,
                VVVV.Dir + "\\packs\\" + Pack.Name
            );
        }
        else
        {
            Console.WriteLine("FBX4V is only available for x64 vvvv");
        }
  </install>
</vpack>
